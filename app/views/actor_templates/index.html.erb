<h1>List of all actors</h1>

<form action="/insert_actor_record" method="post">
  <div>
    <label for="name_field">Name</label>
    <input id="name_field" type="text" name="query_name">
  </div>
  
  <div>
    <label for="dob_field">Date of birth</label>
    <input id="dob_field" type="text" name="query_dob">
  </div>

  <button>Create actor</button>
</form>

<hr>

<% @list_of_actors.each do |actor| %>
  <div>
    <h2><%= actor.name %></h2>
    <a href="/actors/<%= actor.id %>">Show details</a>
  </div>
<% end %>
